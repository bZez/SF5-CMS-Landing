{% if form is defined %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% endif %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <meta name="robots" content="noindex, nofollow">

    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
        <link rel="stylesheet" href="{{ asset('css/pickr.min.css') }}">
    {% block stylesheets %}{% endblock %}
    {% if page.customColor is defined and page.customColor is not null %}
        <style>
            .step {
                background: {{ page.customColor }};
                opacity: .5;
            }
            .bg-custom, .step.finish {
                background: {{page.customColor}};
                opacity: 1;
            }

            .text-custom, b {
                color: {{page.customColor}};
            }

            .header {
                background: linear-gradient(177deg, {{page.customColor}} 80%, white 80%);
            }


        </style>
    {% endif %}
</head>
<body class="mb-md-5" style="overflow-x: hidden">
<div id="fader">
    <div class="row h-100 align-items-center">
        <div class="col-12 text-center p-5">
            <img src="{{ asset('img/simulation-energie-logo-couleur-orange.png') }}" alt="Logo - Ma pompe à chaleur" width="100%" style="max-width: 400px;height: auto;">
        </div>
    </div>
</div>
<header class="container-fluid header">
    <nav class="navbar navbar-expand-lg py-3 ">
        <div class="container">
            <a href="{% if app.user %}{{ path('admin') }}{% else %}{{ path('front') }}{% endif %}" class="navbar-brand text-uppercase font-weight-bold">
                <img src="{{ asset('img/simulation-energier-logo.png') }}" alt="Logo - Ma pompe à chaleur" width="170px">
            </a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                    class="navbar-toggler navbar-toggler-right"><i class="fa fa-bars"></i></button>

            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">{% if app.user %}<a href="{{ path('app_logout') }}" class="nav-link font-weight-bold "><i
                                    class="fas fa-sign-out-alt small"></i> Déconnexion <span
                                    class="sr-only">(current)</span></a>{% endif %}</li>
                    {#                    <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold">About</a></li>
                                        <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold">Gallery</a></li>
                                        <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold">Portfolio</a></li>
                                        <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold">Contact</a></li>#}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container h-100 pt-5">
        <div class="row">
            {% block body %}{% endblock %}
        </div>
    </div>
</header>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
<script src="{{ asset('js/main.js') }}"></script>
<script src="{{ asset('js/pickr.min.js') }}"></script>
<script src="{{ asset('js/snote/summernote-bs4.min.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>

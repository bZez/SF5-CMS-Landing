{% extends 'base.admin.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
<div class="col-12 p-5 rounded bg-light shadow">
    <h1>Gestion des Utilisateurs
        <a class="btn bg-custom text-white float-right" href="{{ path('admin_new') }}"><i class="fas fa-plus"></i> Ajouter un utilisateur</a></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th class="col-2 text-right">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.email }}</td>
                <td class="col-2 text-right">
                    <a class="btn bg-custom text-white" href="{{ path('admin_show', {'id': admin.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn bg-custom text-white" href="{{ path('admin_edit', {'id': admin.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn bg-custom text-white" href="{{ path('admin') }}"><i class="fas fa-backward"></i> Retour Admin</a>
</div>
{% endblock %}

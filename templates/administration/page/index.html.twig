{% extends 'base.admin.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
<div class="col-12 p-5 rounded bg-light shadow">
    <h1>Gestion des Pages <a class="btn bg-custom text-white float-right" href="{{ path('page_new') }}"><i class="fas fa-plus"></i> Ajouter une page</a></h1>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.nom }}</td>
                <td>{% if page.favicon %}<img src="/img/icon/{{ page.favicon }}" alt="Favicon" width="32" class="rounded">&nbsp;{% endif %}{{ page.title }}</td>
                <td class="col-2 text-right">
                    <a class="btn bg-custom text-white" href="{{ path('page_show', {'id': page.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn bg-custom text-white" href="{{ path('page_edit', {'id': page.id}) }}"><i class="fas fa-edit"></i></a>
                    <a class="btn bg-custom text-white" href="{{ path('page_duplicate', {'id': page.id}) }}"><i class="fas fa-clone"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn bg-custom text-white" href="{{ path('admin') }}"><i class="fas fa-backward"></i> Retour Admin</a>
</div>
{% endblock %}

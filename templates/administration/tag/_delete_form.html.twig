<div class="row mt-3">
    <form method="post" class="w-100 " action="{{ path('tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
        <button class="btn btn-danger w-100"><i class="fas fa-times"></i> Supprimer</button>
    </form>
</div>
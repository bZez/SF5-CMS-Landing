<form method="post" class="w-100" action="{{ path('simulator_delete', {'id': simulator.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ simulator.id) }}">
    <button class="btn btn-danger w-100 mt-3">Supprimer le formulaire</button>
</form>

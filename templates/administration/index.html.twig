{% extends 'base.admin.html.twig' %}

{% block title %}Administration - Simulation Energie{% endblock %}

{% block body %}
    <div class="col-12 p-5 rounded bg-light shadow">
        <h1 class="h3">Administration
            {% if is_granted('ROLE_LEAD') or is_granted('ROLE_ADMIN') %}
                <span class="float-md-right">
                  <a href="{{ path('lead_export') }}" class="btn bg-custom text-white w-100"><i class="fas fa-download"></i> Exporter les nouveaux leads</a>
           </span>
            {% endif %}
        </h1>
        <hr>
        <div class="row">
            <div class="col-12 col-md mb-3 mb-m-0">
                <a href="{{ path('lead_index') }}" class="btn bg-custom text-white w-100">Leads</a>

            </div>
            {% if is_granted('ROLE_TRAFIC') or is_granted('ROLE_ADMIN') %}
                <div class="col-12 col-md mb-3 mb-m-0">
                    <a href="{{ path('page_index') }}" class="btn bg-custom text-white w-100">Pages</a>
                </div>
                <div class="col-12 col-md mb-3 mb-m-0">
                    <a href="{{ path('tag_index') }}" class="btn bg-custom text-white w-100">Tags</a>
                </div>
                <div class="col-12 col-md mb-3 mb-m-0 ">
                    <a href="{{ path('simulator_index') }}" class="btn bg-custom text-white w-100">Simulateurs</a>
                </div>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
              <div class="col-12 col-md">
                  <a href="{{ path('admin_index') }}" class="btn bg-custom text-white w-100">Utilisateurs</a>
              </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        function deleteThis(e){
            e.parentNode.remove();
            $('.editor').val($('#editable').html())
        }
        $(document).ready(function () {
            $('#editable').html($('.editor').val());
            $('.tab').append('<div class="actions" onclick="deleteThis(this)"><a href="#" class="btn btn-sm btn-danger"><i class="fas fa-times"></i> Supprimer</a>\</div>').addClass('rounded border p-5 col-4');
        });
        $('form').on('submit',function () {
            e.preventDefault();
            $('.tab').removeClass('bg-primary p-5 col-4');
            e.submit();
        })
    </script>
{% endblock %}
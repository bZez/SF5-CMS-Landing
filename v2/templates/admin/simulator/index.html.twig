{% extends 'base.admin.html.twig' %}

{% block title %}Simulator index{% endblock %}

{% block body %}
<div class="col-12 p-5 rounded bg-light shadow">
    <h1>Simulator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for simulator in simulators %}
            <tr>
                <td>{{ simulator.id }}</td>
                <td>{{ simulator.content }}</td>
                <td>
                    <a href="{{ path('simulator_show', {'id': simulator.id}) }}">show</a>
                    <a href="{{ path('simulator_edit', {'id': simulator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('simulator_new') }}">Create new</a>
</div>
{% endblock %}
